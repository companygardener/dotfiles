export CLICOLOR=1
export TERM=xterm-color
export LSCOLORS=exfxcxdxbxegedabagacad

export HISTFILESIZE=300000
export HISTCONTROL=ignoreboth
export HISTSIZE=100000

if [ -f /etc/issue ]; then
  export PATH="~/bin:~/bin/dotfiles/bin:/usr/local/bin:/cnu/bin:/usr/bin:/bin:$PATH"
else
  export PATH="~/bin:~/bin/dotfiles/bin:/usr/local/bin:/opt/local/bin:/opt/local/sbin:/usr/local/bin:/usr/local/sbin:/opt/local/lib/postgresql83/bin:/opt/local/lib/mysql5/bin:/opt/depot_tools:$PATH"
fi

if [ -f /usr/local/bin/mate ]; then
  export EDITOR="mate -w"
else
  export EDITOR=nano
fi

export P4CONFIG=.p4config

export RUBY_HEAP_FREE_MIN=25000
export RUBY_HEAP_MIN_SLOTS=1500000
export RUBY_GC_MALLOC_LIMIT=75000000
export RUBY_HEAP_SLOTS_GROWTH_FACTOR=1
export RUBY_HEAP_SLOTS_INCREMENT=50000
