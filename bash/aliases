alias ..='cd ..'
alias ..2='..;..'
alias ..3='..;..;..'
alias ..4='..;..;..;..'
alias ..5='..;..;..;..;..'

alias be='bundle exec'
alias rb=rbenv

alias dus='du -Psckx * | sort -nr'

if [[ $(uname) = Darwin ]]; then
  is_darwin=1

  alias deleted='lsof | grep "(deleted)$"'

  alias app='open -a'

  alias ll='ls -lahG'
  alias xgrep='grep -C2 -EHIrns --color=auto'

  alias code='cd ~/code; pwd'
  alias p="cd ~/code/projects"

  alias m.='mvim .'

  alias flushdns="dscacheutil -flushcache"
  alias sniff="sudo ngrep -d 'en1' -t '^(GET|POST) ' 'tcp and port 80'"

  for method in GET HEAD POST PUT DELETE TRACE OPTIONS; do alias "$method"="lwp-request -m '$method'"; done

  alias pstree='pstree -g2 -w'

  alias mute="osascript -e 'set volume output muted true'"
  alias shout="osascript -e 'set volume 10'"
  alias slime='open -a "Sublime Text 2"'

  alias soundfix="sudo pkill coreaudiod"
  alias uuid=uuidgen

  alias mate="~/build/TextMate/Applications/mate/mate -w"

  alias npmup="npm install -g npm"
else
  is_darwin=0

  alias ll='ls -lah --color=auto'
  alias xgrep='grep -C2 -TEHIrns --color=auto'

  alias deleted='sudo lsof | grep "(deleted)$"'

  alias code='cd /export/code; pwd'
fi

alias g=git
alias ga="git add"
alias gc="git commit"
alias gd="git diff"
alias gh="git help"
alias gs="git s"

# Autocomplete for 'g' as well
complete -o default -o nospace -F _git g

alias dotfiles='cd $DOTFILES'

alias psql='PAGER=vimpager psql'

alias p4s='p4 sync'
alias p4c='p4 change'
alias p4e='p4 edit'
alias p4i='p4 integrate'

alias df='df -h'
alias h='history | grep -i '

alias rvmpow='rvm env . -- --env > .powenv'

alias myip='wget -nv -O - http://checkip.dyndns.org/ 2>&1'

alias reload='source ~/.bashrc'

alias screen="screen -U"

alias gemdocs='yard server --gems --reload --port 8809'


