alias ..="cd .."
alias ..1=".."
alias ..2="..;.."
alias ..3="..;..;.."
alias ..4="..;..;..;.."
alias ..5="..;..;..;..;.."

if [ -f /etc/issue ]; then
  alias ls='ls -lah --color=auto'
else
  alias ls='ls -lahG'
fi

alias reload='source ~/.bashrc'

alias dotfiles='cd ~/bin/dotfiles'

alias p4s="p4 sync"
alias p4c="p4 change"
alias p4e="p4 edit"
alias p4i="p4 integrate"
