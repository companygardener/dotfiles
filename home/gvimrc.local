set transparency=8
set guioptions=acemg
set guifont=inconsolata:h11
set columns=240

set cursorline
set textwidth=80
set colorcolumn=+1,+2,+3
set linespace=1
set fuoptions=maxvert

colorscheme jellybeans
highlight ColorColumn guibg=#222222

set scrolloff=3

if has("autocmd")
  autocmd! BufWritePost gvimrc.local source %
endif
