[color]
  branch      = auto
  diff        = auto
  grep        = auto
  interactive = auto
  showbranch  = auto
  status      = auto
  ui          = true

[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green

[color "diff"]
  meta = yellow
  frag = magenta
  old  = red
  new  = green
  whitespace = red reverse

[color "status"]
  added     = yellow
  changed   = green
  untracked = cyan

[apply]
  ignorewhitespace = false

[core]
  whitespace          = fix,blank-at-eol,blank-at-eof,cr-at-eol,space-before-tab,-indent-with-non-tab,-tab-in-indent
  eol                 = native
  symlinks            = true
  deltaBaseCacheLimit = 512m
  preloadindex        = true
  pager               = less -R
	excludesfile = /Users/epeterson/.gitignore

[alias]
  s    = status
  c    = commit
  b    = checkout -b
  co   = checkout
  d    = diff
  dc   = diff --cached
  l    = log --date=short --pretty=format:'%C(bold magenta)%h %Creset%C(green)%cd%Creset %C(white)%cN%Creset %s %C(yellow)%d'
  lg   = log --graph --decorate --pretty=oneline --abbrev-commit --all
  h    = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  ha   = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short --all
  type = cat-file -t
  dump = cat-file -p
  i    = ls-files -o -i --exclude-standard
  sub  = submodule
  who  = shortlog -ns --
  graphviz = "!f() { echo 'digraph git {' ; git log --pretty='format:  %h -> { %p }' \"$@\" | sed 's/[0-9a-f][0-9a-f]*/\"&\"/g' ; echo '}'; }; f"
  assume   = update-index --assume-unchanged
  unassume = update-index --no-assume-unchanged
  assumed  = "!git ls-files -v | grep ^h | cut -c 3-"
  snapshot = !git stash save "snapshot: $(date)" && git stash apply "stash@{0}"
  pr       = "!f() { git fetch origin refs/pull/$1/head:pr/$1; } ; f"

[user]
  name  = Erik Peterson
  email = thecompanygardener@gmail.com

[diff]
  tool = p4diff
	algorithm = patience

[merge]
  keepBackup = false
  tool       = vimdiff

[difftool]
  prompt = false

[branch "master"]
  remote = origin
  merge  = refs/heads/master

[branch]
  autosetupmerge = true

[push]
	default = current

[pull]
  default = tracking

[rebase]
  default = master
