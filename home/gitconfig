[color]
  branch      = auto
  diff        = auto
  grep        = auto
  interactive = auto
  showbranch  = auto
  status      = auto
  ui          = true

[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green

[color "diff"]
  meta = yellow
  frag = magenta
  old  = red
  new  = green
  whitespace = red reverse

[color "status"]
  added     = yellow
  changed   = green
  untracked = cyan

[apply]
  ignorewhitespace = false

[core]
  whitespace          = fix,blank-at-eol,blank-at-eof,cr-at-eol,space-before-tab,-indent-with-non-tab,-tab-in-indent
  autocrlf            = input
  safecrlf            = true
  eol                 = native
  symlinks            = true
  deltaBaseCacheLimit = 512m
  preloadindex        = true
  pager               = less -R

[alias]
  s    = status
  c    = commit
  b    = branch
  co   = checkout
  d    = diff
  dc   = diff --cached
  l    = log --date=short --pretty=format:'%C(bold magenta)%h %Creset%C(green)%cd%Creset %C(white)%cN%Creset %s %C(yellow)%d'
  lg   = log --graph --decorate --pretty=oneline --abbrev-commit --all
  h    = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  ha   = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short --all
  type = cat-file -t
  dump = cat-file -p
  i    = ls-files -o -i --exclude-standard
  sub  = submodule

[user]
  name  = Erik Peterson
  email = thecompanygardener@gmail.com

[diff]
  tool = p4diff

[merge]
  keepBackup = false
  tool       = vimdiff

[difftool]
  prompt = false

[branch "master"]
  remote = origin
  merge  = refs/heads/master

[branch]
  autosetupmerge = true

[push]
  default = tracking

[pull]
  default = tracking

[rebase]
  default = master
