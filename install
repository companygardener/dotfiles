#!/usr/bin/env ruby

home = File.expand_path('~')

Dir.chdir('home')
Dir['*'].each do |file|
  target = File.join(home, ".#{file}")
  `ln -fs #{File.expand_path file} #{target}`
end

`~/bin/dotfiles/install-bash`

# git push on commit
# `echo 'git push' > .git/hooks/post-commit`
# `chmod 755 .git/hooks/post-commit`

